extends layout

block content
    .text-white.text-center#particles-js
      .col-md-6.offset-md-3#create-pb
        h4.font-italic.text-warning Create an Article
        a.btn.btn-outline-primary(href='/articles/add') Create Article
    .album.py-5.bg-light
      .container
        .row
          each article, i in articles
            .col-md-4
              .card.mb-4.box-shadow
                img.card-img-top(src=`${article.image}`, alt=`${article.title} image` style="height:250px;")
                .card-body
                  h5 #{article.title}
                  p.card-text
                    | #{article.body}
                  .d-flex.justify-content-between.align-items-center
                    .btn-group
                      a.btn.btn-sm.btn-outline-success(href='/articles/'+article._id) View
                