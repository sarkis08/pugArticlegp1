extends layout

block content
    .col-md-8.offset-md-2
        .card
            h5.card-header.text-center #{article.title}
            img.card-img-top(src=`${article.image}`, alt=`${article.title} image` style="height:350px;")
            .card-body
                p.card-text
                | #{article.body}
                br
                p
                 if user
                    if user.id == article.author
                        a.btn.btn-primary(href='/articles/edit/'+article._id) Edit    
                        a.btn.btn-danger.delete-article(href="#", data-id=article._id) Delete
            .card-footer.text-muted.blockquote-footer Article Created by 
                cite(title="Source Title")
                    strong #{author}